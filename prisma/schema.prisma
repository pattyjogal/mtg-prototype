generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model MtgCard {
  id             String   @id @default(cuid())
  name           String
  manaCost       String
  type           String
  rarity         String
  text           String
  flavor         String?
  power          String?
  toughness      String?
  artworkUrl     String?
  setSymbolUrl   String?
  colorIndicator String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
