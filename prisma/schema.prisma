generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model MtgCard {
  id             String     @id @default(cuid())
  name           String
  manaCost       String
  type           CardType[]
  rarity         String
  text           String
  flavor         String?
  power          String?
  toughness      String?
  artworkUrl     String?
  setSymbolUrl   String?
  colorIndicator String?
  user           String     @default("admin")
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

enum CardType {
  CREATURE
  ARTIFACT
  ENCHANTMENT
  INSTANT
  SORCERY
  PLANESWALKER
  LAND
  OTHER
}
